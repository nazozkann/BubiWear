        <form action="<%= submitPath %> ?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
            <p class="inpt-lbl-flex">
                <label for="">Title</label>
                <input type="text" id="title" name="title" value="<%= product.title %>" required>
            </p>
            <p class="inpt-lbl-flex">
                <label for="">Price</label>
                <input type="number" id="price" name="price" <%= product.price %> required>
            </p>
            <p class="inpt-lbl-flex-row">
                <label for="category">Category</label>
                <select id="category" name="category" <%= product.category %> required>
                    <option value="t-shirt">T-shirt</option>
                    <option value="sweatshirt">Sweatshirt</option>
                    <option value="pants">Pants</option>
                    <option value="bags">Bags</option>
                </select>
            </p>
            <div class="check-boxes">
                <p>
                    <label for="color" <%= product.color %>>Color Options</label>
                    <input type="checkbox" id="black" name="color" value="black">
                    <label class="opt" for="black">Black</label>
                
                    <input type="checkbox" id="white" name="color" value="white">
                    <label class="opt" for="white">White</label>
                
                    <input type="checkbox" id="gray" name="color" value="gray">
                    <label class="opt" for="gray">Gray</label>
                </p>
                <p>
                    <label for="size" <%= product.sizes %>>Available Sizes</label><br>
                    <ul style="list-style: none; padding: 0;">
                        <li>
                            <input type="checkbox" id="xs" name="size" value="xs">
                            <label for="xs">XS</label>
                        </li>
                        <li>
                            <input type="checkbox" id="s" name="size" value="s">
                            <label for="s">S</label>
                        </li>
                        <li>
                            <input type="checkbox" id="m" name="size" value="m">
                            <label for="m">M</label>
                        </li>
                        <li>
                            <input type="checkbox" id="l" name="size" value="l">
                            <label for="l">L</label>
                        </li>
                        <li>
                            <input type="checkbox" id="xl" name="size" value="xl">
                            <label for="xl">XL</label>
                        </li>
                    </ul>
                </p>
            </div>
            <p>
                <label for="">Image 1</label>
                <input type="file" id="image-1" name="image-1" accept="image/png, image/jpg, image/jpeg" required>
            </p>
            <p>
                <label for="">Image 2</label>
                <input type="file" id="image-2" name="image-2" accept="image/png, image/jpg, image/jpeg" required>
            </p>
            <p>
                <label for="">Image 3</label>
                <input type="file" id="image-3" name="image-3" accept="image/png, image/jpg, image/jpeg" required>
            </p>
            <p>
                <label for="">Image 4</label>
                <input type="file" id="image-4" name="image-4" accept="image/png, image/jpg, image/jpeg" required>
            </p>

            <p id="new-p-buttons">
                <button type="reset" class="btn btn-dark">Reset</button>
                <button class="btn btn-dark">Save</button>
            </p>
        </form>